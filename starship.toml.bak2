"$schema" = "https://starship.rs/config-schema.json"

# Add a newline before each prompts
add_newline = true 

[fill]
symbol = " "

[os]
disabled = false
format = "[$symbol ]($style)"
style = "bg:#8C21D9 fg:#0090FF"
symbols.Windows = "ï…º"

[username]
show_always = true
style_user = "bg:#8C21D9 fg:#0090FF"
style_root = "bg:#8C21D9 fg:#FFAE00"
format = "[$user ]($style)"
disabled = false

[conda]
format = "[\\($environment\\) ]($style)"
ignore_base = false
style = "bg:#8C21D9 fg:#2A007F"

[directory]
style = "fg:#0090FF bg:#5E21D9"
format = "[ $path ]($style)"
truncation_length = 5
truncation_symbol = "â€¦/"

[directory.substitutions]
