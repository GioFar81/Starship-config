# ~/.config/starship.toml

# Custom format
format = """
[╭─](#8C21D9)\
[](#8C21D9)\
$os\
$username\
$conda\
[](bg:#5E21D9 fg:#8C21D9)\
$directory\
[](fg:#5E21D9 bg:#3021D9)\
$git_branch\
$git_commit\
$git_state\
$git_metrics\
$git_status\
[](fg:#3021D9 bg:#215ED9)\
$nodejs\
$java\
$php\
$python\
$rust\
$golang\
$php\
$package\
[](fg:#215ED9)\
$fill\
$jobs\
[](fg:#1d2230)\
$cmd_duration\
$memory_usage\
$time\
[](fg:#1d2230)\
$line_break\
[│](#8C21D9)\
$line_break\
[╰───────](#8C21D9)\
$character"""

"$schema" = "https://starship.rs/config-schema.json"

# Add a newline before each prompts
add_newline = true 

[fill]
symbol = " "

[os]
disabled = false
format = "[$symbol ]($style)"
style = "bg:#8C21D9 fg:#0090FF"
symbols.Windows = ""

[username]
show_always = true
style_user = "bg:#8C21D9 fg:#0090FF"
style_root = "bg:#8C21D9 fg:#FFAE00"
format = "[$user ]($style)"
disabled = false

[conda]
format = "[\\($environment\\) ]($style)"
ignore_base = false
style = "bg:#8C21D9 fg:#2A007F"

[directory]
style = "fg:#0090FF bg:#5E21D9"
format = "[ $path ]($style)"
truncation_length = 5
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = " "
"Pictures" = " "

[git_branch]
symbol = ""
style = "bg:#3021D9"
format = "[[ $symbol $branch(: $remote_branch)](fg:#00B4FF bg:#3021D9)]($style)"
always_show_remote = true

[git_commit]
format = "[[\\($hash$tag\\)](fg:#00B4FF bg:#3021D9)]($style)"
style = "bg:#3021D9"
commit_hash_length = 7
only_detached = false

[git_state]
format = "[\\($state( $progress_current of $progress_total)\\)]($style) "
rebase =	"REBASING"
merge = "MERGING"
revert = "REVERTING"
cherry_pick = "[🍒 PICKING](bold red)"
bisect = "BISECTING"
am = "AM"
am_or_rebase = "AM/REBASE"
style = "bg:#3021D9"

[git_metrics]
format = "[ +$added]($added_style)[ -$deleted]($deleted_style)"
added_style = "fg:#21DA21 bg:#3021D9"
deleted_style = "fg:#DA2121 bg:#3021D9"
disabled = false

[git_status]
style = "bg:#3021D9"
format = "[[ / ($all_status$ahead_behind )](#DCD9FF bg:#3021D9)]($style)"
conflicted = "="
ahead = "⇡ ${count}"
behind = "⇣ ${count}"
diverged = "⇕ ${ahead_count}⇣${behind_count}"
up_to_date = "✓"
untracked = "?"
stashed = "$"
modified = "!"
staged = "[+\\($count\\)](green)"
renamed = "»"
deleted = "✘"
ignore_submodules = false

[nodejs]
symbol = ""
style = "bg:#215ED9"
format = "[[ $symbol ($version) ](fg:#DCD9FF bg:#215ED9)]($style)"

[python]
style = "bg:#215ED9"
format = "[[ ${symbol}${pyenv_prefix}( ${version} )(\\($virtualenv\\) )](fg:#DCD9FF bg:#215ED9)]($style)"
symbol = ""

[rust]
symbol = ""
style = "bg:#215ED9"
format = "[[ $symbol ($version) ](fg:#DCD9FF bg:#215ED9)]($style)"

[golang]
symbol = ""
style = "bg:#215ED9"
format = "[[ $symbol ($version) ](fg:#DCD9FF bg:#215ED9)]($style)"

[php]
symbol = ""
style = "bg:#215ED9"
format = "[[ $symbol ($version) ](fg:#DCD9FF bg:#215ED9)]($style)"

[jobs]
symbol = ""
style = "bold red"
number_threshold = 1
format = "[$symbol]($style)"

[cmd_duration]
min_time = 0
format = "[ $duration |](fg:#6E21D9 bg:#1d2230)($style)"
style = "bg:#1d2230"

[memory_usage]
format = "[[ RAM $ram - SWAP $swap |](fg:#8C21D9 bg:#1d2230)]($style)"
disabled = false
style = "bg:#1d2230"
threshold = -1

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#1d2230"
format = "[[  $time ](fg:#AB21D9 bg:#1d2230)]($style)"

[character]
success_symbol = "[❯❯](#00ff00)"
error_symbol = "[❯❯](#ff0000)"
vicmd_symbol = "[❯❯](#00ff00)"